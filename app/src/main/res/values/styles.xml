<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/greenMedium</item>
        <item name="colorPrimaryDark">@color/greenDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        
    </style>

    <style name="ActivityTitle" parent="">
        <item name="android:textSize">34dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/tealMedium</item>
    </style>
    
    <style name="ChildSelectionButton">
        <item name="android:textSize">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/tealDark</item>
        <item name="android:radius">24dp</item>
        <item name="android:bottomLeftRadius">40dp</item>
        <item name="android:background">@color/sunnyGreenDarkest</item>

        <item name="android:layout_margin">8dp</item>
        <item name="android:width">300dp</item>
        <item name="android:height">100dp</item>
    </style>

    <style name="ChildSelectionButton.TextView">
        <item name="android:background">@color/greenMedium</item>
        <item name="android:textSize">24dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="AltButton">
        <item name="android:textSize">24dp</item>
        <item name="android:width">300dp</item>
        <item name="android:height">100dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonAddChild">
        <item name="android:background">@drawable/plus</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_width">44dp</item>
    </style>

    <style name="ButtonShowNotifications">
        <item name="android:background">@drawable/note</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_width">44dp</item>
    </style>

    <style name="homeButton">
        <item name="android:background">@drawable/home</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_width">44dp</item>
    </style>

    <style name="footer">
        <item name="android:background">@color/greenDark</item>
    </style>

    <style name="standardButton">
        <item name="android:background">@drawable/standard_button_background</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@drawable/standard_button_text</item>
    </style>

    <style name="expandButton">
        <item name="android:colorBackground">@color/greenMedium</item>
        <item name="android:background">@drawable/expand_button_symbol</item>
    </style>

    <style name="editText">
        <item name="android:textColor">@color/greenDarkest</item>

    </style>
    
    <style name="editText.small">
        <item name="android:textSize">12dp</item>
    </style>

</resources>
