<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        
    </style>

    <style name="ActivityTitle" parent="">
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">@color/tealMedium</item>
    </style>
    
    <style name="ChildSelectionButton">
        <item name="android:textSize">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/tealDark</item>
        <item name="android:radius">24dp</item>
        <item name="android:bottomLeftRadius">40dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:padding">24dp</item>
        <item name="android:width">300dp</item>
        <item name="android:height">100dp</item>

    </style>

</resources>
