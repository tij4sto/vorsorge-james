        </activity>

        <activity android:name=".singleUntersuchungViewActivity.SingleUntersuchungView">
            <intent-filter>
                <action android:name="android.intent.action.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".singleChildViewActivity.SingleChildView">
            <intent-filter>
                <action android:name="android.intent.action.DEFAULT" />
            </intent-filter>
